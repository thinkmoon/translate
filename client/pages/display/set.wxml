<view class="page">
  <view class="weui-cells__title">展板</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea bindinput="input_display" class="weui-textarea" placeholder="请输入你要展示的内容" value='{{display}}' style="height: 10.3em" />
        <view class="weui-textarea-counter">{{character}}/50</view>
      </view>
    </view>
  </view>
  <view class='section'>
    <view class="section section_gap">
      <text class="section__title">选择字号</text>
      <view class="body-view">
        <slider bindchange="sliderchange" activeColor="#a2c5c9" min="48" max="290" show-value/>
      </view>
    </view>
  </view>
  <view class="weui-btn-area">
    <button bindtap="display" class="weui-btn btn">展示</button>
  </view>
  <weUI_foot></weUI_foot>
</view>